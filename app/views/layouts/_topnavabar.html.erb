<div class="navbar-wrapper">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <%= link_to root_path, class: "navbar-brand" do %>
        <h3>Cissa's Version</h3>
      <% end %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto">
          <!-- Adicione os links responsivos aqui -->
        </ul>

        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <% if user_signed_in? %>
              <div class="d-flex align-items-center">
                <div class="nav-link">Logged in as <strong><%= current_user.email %></strong>.</div>
                <%= link_to "New Article", new_article_path, class: "nav-link btn btn-outline-secondary btn-sm mx-2" %>
                <%= link_to "Edit profile", edit_user_registration_path, class: "nav-link" %>
                <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link btn btn-link" %>
              </div>
            <% else %>
              <div class="d-flex align-items-center">
                <%= link_to "Sign up", new_user_registration_path, class: "nav-link btn btn-outline-success btn-sm mx-2" %>
                <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-outline-primary btn-sm mx-2" %>
              </div>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>

