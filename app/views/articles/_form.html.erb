<div>
<%= simple_form_for article do |form| %>
    <%= form.input :title %>
    <%= form.input :body, input_html: {rows: 10} %>
    <div class="btn-group" role="group">
    <%= form.button :submit , class: "btn btn-primary btn-sm" %>
    </div>
    <div class="btn-group" role="group">
          <%= link_to 'Back', root_path, class: "btn btn btn-secondary btn-sm" %>
        </div>
<% end %>
</div>